<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/add_music_image"
    android:background="@color/color_gray_2">


    <FrameLayout
        android:layout_width="@dimen/add_music_image"
        android:layout_height="@dimen/add_music_image">

        <ImageView
            android:id="@+id/add_music_item_image"
            android:layout_width="@dimen/add_music_image"
            android:layout_height="@dimen/add_music_image"
            android:background="@color/color_gray_7"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/add_music_item_play"
            android:layout_width="@dimen/add_music_item_play"
            android:layout_height="@dimen/add_music_item_play"
            android:src="@mipmap/qc"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/add_music_item_loading"
            android:layout_width="@dimen/add_music_item_play"
            android:layout_height="@dimen/add_music_item_play"
            android:src="@mipmap/src_res_icon_loading_small"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/add_music_item_pause"
            android:layout_width="@dimen/add_music_item_play"
            android:layout_height="@dimen/add_music_item_play"
            android:src="@mipmap/q3"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/add_music_item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Shut Up"
            android:textSize="@dimen/text_font_small"
            android:textColor="@color/color_white"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/add_music_item_author"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Fanta"
            android:textSize="@dimen/text_font_small"
            android:textColor="@color/color_gray_8"/>

        <TextView
            android:id="@+id/add_music_item_duration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="00:28"
            android:textSize="@dimen/text_font_small"
            android:textColor="@color/color_gray_8"
            android:gravity="center_vertical"/>

    </LinearLayout>



</LinearLayout>